{
    "manifest_version": 3,
    "name": "Study Tools",
    "version": "1.0.0",
    "description": "Een extensie die verschillende aspecten van Magister verbetert en problemen ermee oplost.",
    "icons": {
        "300": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://accounts.magister.net/account/login*"
            ],
            "js": [
                "jquery-3.5.1.min.js",
                "magisterLogin.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.magister.net/*"
            ],
            "js": [
                "magister.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Study Tools\nKlik om te configureren"
    },
    "permissions": [
        "storage"
    ]
}