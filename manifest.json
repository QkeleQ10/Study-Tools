{
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "version": "1.2.4",
    "default_locale": "nl",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png",
        "256": "icons/256.png",
        "300": "icons/300.png",
        "512": "icons/512.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.magister.net/*",
                "*://*.noordhoff.nl/*",
                "*://login.microsoftonline.com/*/oauth2/authorize*"
            ],
            "js": [
                "util.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://accounts.magister.net/account/login*"
            ],
            "js": [
                "magisterLogin.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.magister.net/magister/*"
            ],
            "js": [
                "magister.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://apps.noordhoff.nl/se*",
                "*://identity.noordhoff.nl/*"
            ],
            "js": [
                "noordhoff.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://login.microsoftonline.com/*/oauth2/authorize*"
            ],
            "js": [
                "microsoftLogin.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_icon": "icons/512.png",
        "default_popup": "popup.html",
        "default_title": "__MSG_appName__\nKlik om te configureren"
    },
    "options_page": "popup.html",
    "options_ui": {
        "page": "popup.html",
        "open_in_tab": false
    },
    "permissions": [
        "storage"
    ]
}